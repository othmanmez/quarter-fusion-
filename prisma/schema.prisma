generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  slug  String @unique
  menus Menu[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  image       String
  available   Boolean  @default(true)
  badge       String?  // HOT, NEW, TOP
  
  // Conditions de commande par mode
  availableForClickAndCollect Boolean @default(true)
  availableForDelivery        Boolean @default(true)
  
  // Personnalisations disponibles pour ce plat
  customizations Customization[]
  
  categoryId  String   @db.ObjectId
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([categoryId])
  @@index([available])
  @@index([availableForClickAndCollect])
  @@index([availableForDelivery])
}

// Personnalisations pour les plats (options, suppléments, etc.)
model Customization {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   // Ex: "Sauce", "Taille", "Supplément fromage"
  type        CustomizationType
  required    Boolean  @default(false) // Si le client DOIT choisir
  options     CustomizationOption[]
  
  menuId      String   @db.ObjectId
  menu        Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([menuId])
}

// Options pour chaque personnalisation
type CustomizationOption {
  name       String   // Ex: "Sauce barbecue", "Grande taille"
  priceExtra Float    // Prix supplémentaire (0 si gratuit)
}

enum CustomizationType {
  SINGLE_CHOICE   // Radio : 1 seul choix (ex: taille)
  MULTIPLE_CHOICE // Checkbox : plusieurs choix (ex: suppléments)
  TOGGLE          // On/Off (ex: sans oignon)
}

// Villes de livraison avec frais personnalisés
model DeliveryCity {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  postalCode  String?  // Code postal (optionnel)
  deliveryFee Float    // Frais de livraison pour cette ville
  minOrder    Float?   // Montant minimum spécifique à cette ville (optionnel)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([active])
}

model Order {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber  String @unique
  customerName String
  customerEmail String
  customerPhone String
  items        OrderItem[]
  total        Float
  deliveryAddress String?
  city         String?
  isDelivery   Boolean @default(false)
  status       OrderStatus @default(A_PREPARER)
  estimatedTime String @default("30-45 minutes")
  paymentMethod PaymentMethod
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
}

type OrderItem {
  title          String
  quantity       Int
  price          Float
  description    String?
  customizations SelectedCustomization[] // Personnalisations choisies
}

type SelectedCustomization {
  name        String   // Nom de la personnalisation (ex: "Sauce")
  selectedOptions String[] // Options choisies (ex: ["Sauce barbecue"])
  priceExtra  Float    // Prix supplémentaire total
}

enum OrderStatus {
  A_PREPARER
  EN_ATTENTE
  EN_PREPARATION
  PRETE
  TERMINEE
  ANNULEE
}

enum PaymentMethod {
  ESPECES
  CARTE
}

model Settings {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique
  value String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String   // Hasher avec bcrypt
  name      String?
  role      UserRole @default(USER)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

enum UserRole {
  USER
  ADMIN
  MANAGER
}